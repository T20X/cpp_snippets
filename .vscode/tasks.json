{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "BuildCpp",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-O0",
                "-fno-strict-aliasing",
                "-D_REENTRANT",
                "-std=c++17",
                "-pthread",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Launch Program",
            "type": "shell",
            "windows": {
                "command": "./${fileBasenameNoExtension}.exe"
            },
            "command": "./${fileBasenameNoExtension}.exe",
            "args": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "dependsOn": [
                "BuildCpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:\\cygwin64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\cygwin64\\bin"
            }
        }
    ]
}