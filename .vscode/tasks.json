{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "BuildCpp",
            "command": "make ${relativeFileDirname}-${fileBasenameNoExtension}",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "BuildCppLegacy",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-O0",
                "-fno-strict-aliasing",
                "-D_REENTRANT",
                "-std=c++17",
                "-pthread",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Launch Program",
            "type": "shell",
            "command": "./${relativeFileDirname}-${fileBasenameNoExtension}",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "dependsOn": [
                "BuildCpp"
            ],
            "group": "build"
        }
    ]
}